<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#5a5a5a"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/menu_articles"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_android_article"
        app:tint="@color/image_button_background_color" />

    <ImageButton
        android:id="@+id/menu_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_android_search"
        app:tint="@color/image_button_background_color"/>

    <ImageButton
        android:id="@+id/menu_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_android_home_page"
        app:tint="@color/image_button_background_color"/>

    <ImageButton
        android:id="@+id/menu_friends"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_android_friends"
        app:tint="@color/image_button_background_color"/>

    <ImageButton
        android:id="@+id/menu_wildfire_adding"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_android_fire"
        app:tint="@color/image_button_background_color"/>

</LinearLayout>